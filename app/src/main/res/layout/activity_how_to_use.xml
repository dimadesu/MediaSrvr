<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ScrollView
    android:id="@+id/scroll"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:paddingTop="16dp"
      android:paddingBottom="24dp">

      <TextView
        android:id="@+id/titleHowTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Use"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

      <TextView
        android:id="@+id/sub1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish streams from streaming app on this device to the server on the same device"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish streams to:"
        android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/code1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="rtmp://localhost:1935/publish/live"
        android:layout_marginBottom="12dp" />

      <TextView
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play streams using the same URL."
        android:layout_marginBottom="16dp" />

      <TextView
        android:id="@+id/sub2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish streams from another device or camera to the server on this device"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/p3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For example, to publish stream from action camera to the server on your phone:"
        android:layout_marginBottom="8dp" />

      <LinearLayout
        android:id="@+id/bullets_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 Phone and action camera have to be on the same Wi‑Fi."
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 You can create a Wi‑Fi hotspot with your phone."
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 App builds RTMP URLs for each network this device is on."
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 Configure action camera to connect to the Wi‑Fi hotspot and publish to RTMP URL."
          android:lineSpacingExtra="4dp" />

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>