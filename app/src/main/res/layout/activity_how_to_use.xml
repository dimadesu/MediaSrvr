<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ScrollView
    android:id="@+id/scroll"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:paddingTop="16dp"
      android:paddingBottom="24dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Stop/start"
          android:textStyle="bold"
          android:textSize="20sp"
          android:layout_marginBottom="8dp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RTMP server starts automatically when the app is opened."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="To stop the server tap the button in the notification."
          android:textSize="16sp"
          android:layout_marginBottom="8dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Publish and play streams on the same device"
          android:textStyle="bold"
          android:textSize="20sp"
          android:layout_marginBottom="8dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="To publish from a streaming app on this device to the server on the same device use this URL:"
          android:textSize="16sp"
          android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/code1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="monospace"
        android:text="rtmp://localhost:1935/publish/live"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

      <TextView
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play streams on this device using the same URL. Use an app like VLC player."
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Publish stream from the other device to this device"
          android:textStyle="bold"
          android:textSize="20sp"
          android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/p3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For example, to publish stream from an action camera to the server on your phone:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

      <LinearLayout
        android:id="@+id/bullets_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 Phone and action camera have to be on the same Wi‑Fi."
          android:textSize="16sp"
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 You can create Wi‑Fi hotspot with your phone."
          android:textSize="16sp"
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 This app builds RTMP URLs for each network that this device is on."
          android:textSize="16sp"
          android:layout_marginBottom="8dp"
          android:lineSpacingExtra="4dp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="\u2022 Configure action camera to connect to the Wi‑Fi hotspot and publish to the RTMP URL that is not 'localhost'."
          android:textSize="16sp"
          android:lineSpacingExtra="4dp" />

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>